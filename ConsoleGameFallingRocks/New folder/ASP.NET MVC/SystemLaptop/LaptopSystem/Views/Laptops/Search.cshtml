@model IEnumerable<LaptopSystem.ViewModels.LaptopViewModel>

<h2>Search Result</h2>

<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var laptop = Model.ElementAt(i);
        <div class="span4">
            <h3>
                @laptop.Manufacturer @laptop.Model
            </h3>
            <img src="@laptop.ImageUrl" />
            <p><a class="btn" href="@Url.Action("Details", "Laptops", new { id = laptop.LaptopId })">Price $@laptop.Price</a> </p>
        </div>
        if ((i + 1) % 3 == 0)
        {
        @:</div>
        @:<div class="row">
       }
    }
</div>